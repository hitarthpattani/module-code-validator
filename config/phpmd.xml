<ruleset name="CodeValidator MessDetector Ruleset" xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation=" http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>CodeValidator MessDetector Ruleset</description>

    <rule ref="rulesets/codesize.xml" />
    <rule ref="rulesets/unusedcode.xml"/>
    <rule ref="rulesets/naming.xml">
        <exclude name="LongVariable" />
    </rule>
    <!-- Update rule to have longer maximum length as magento can have long repositories names -->
    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum" description="The variable length reporting threshold" value="30"/>
        </properties>
    </rule>
</ruleset>
